    <meta charset="UTF-8">
    <title>
        {% if block('title') is defined %}
            {% set _title = block('title') %}
            {% if _title is not empty %}
                {{ _title|raw }} |
            {% endif %}
        {% endif %}
        {# TODO Update template name #}
        IMH NVD GENERATOR
    </title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
