<body class="bg-gray-300">
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .topnav a.active {
            background-color: #04AA6D;
            color: white;
        }
    </style>
</head>
<body>

<div class="topnav">
    {% if app.user %}
        <a href="{{ path('home_page') }}">Home</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin') }}">CPE</a>
        {% endif %}
        <a href="{{ path('app_logout') }}">Log out</a>
    {% else %}
        <a href="{{ path('app_login') }}">Log in</a>
    {% endif %}
</div>

{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="alert alert-{{ type }} flex flex-row items-center justify-between">
            <p>{{ message|trans|raw }}</p>
            <button type="button" class="float-right text-2xl" onclick="this.closest('div').style.display='none'">
                &times;
            </button>
        </div>
    {% endfor %}
{% endfor %}

{% block body %}{% endblock %}
</body>
</html>
